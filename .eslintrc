{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "amd": true
  },
  "rules": {
    "eqeqeq": ["error", "smart"],
    "no-eval": "error",
    "no-extra-parens": "error",
    "no-implicit-globals": "error",
    "no-trailing-spaces": "error",
    "no-unused-expressions": "error",
    "semi": ["error", "never"],
    "no-var": "error",
    "prefer-const": "error"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  }
}
